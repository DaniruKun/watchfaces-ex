<h1>Show Face</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @face.name %>
  </li>

  <li>
    <strong>Author:</strong>
    <%= @face.user_id %>
  </li>

  <li>
    <strong>Keywords:</strong>
    <%= @face.keywords %>
  </li>

</ul>

<%= img_tag(Routes.static_path(@conn, "/uploads/123-Lain-thumb.png"), class: "w-50") %>

<span><%= link "Edit", to: Routes.face_path(@conn, :edit, @face) %></span>
<span><%= link "Back", to: Routes.face_path(@conn, :index) %></span>
